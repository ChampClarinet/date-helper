{
  "name": "@cantabile/date-helper",
  "version": "1.3.5",
  "description": "Helper class for date handling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/ChampClarinet/date-helper",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "check-types": "tsc --noEmit",
    "prepare": "husky",
    "commit": "cz",
    "format": "prettier -w ."
  },
  "author": "Wallop Opasakhun (https://github.com/champclarinet)",
  "license": "ISC",
  "dependencies": {
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.12",
    "commitizen": "^4.3.1",
    "commitlint": "^20.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-customizable": "^7.5.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz.config.cjs"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}

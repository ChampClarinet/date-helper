{
  "name": "@cantabile/date-helper",
  "version": "1.4.0",
  "description": "Helper class for date handling",
  "homepage": "https://github.com/ChampClarinet/date-helper",
  "author": "Wallop Opasakhun (https://github.com/champclarinet)",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "packageManager": "bun@1.3.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "bun build src/index.ts --outdir dist --target=node --format=esm --sourcemap --outfile=index.mjs",
    "build:cjs": "bun build src/index.ts --outdir dist --target=node --format=cjs --sourcemap --outfile=index.cjs",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "bun run clean && bun run build:esm && bun run build:cjs && bun run build:types",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "prepare": "husky",
    "commit": "cz",
    "format": "prettier -w .",
    "release:major": "bun run build && bun test && npm version major && git push && git push --tags && HUSKY=0 bun publish --access public",
    "release:minor": "bun run build && bun test && npm version minor && git push && git push --tags && HUSKY=0 bun publish --access public",
    "release:patch": "bun run build && bun test && npm version patch && git push && git push --tags && HUSKY=0 bun publish --access public"
  },
  "license": "ISC",
  "dependencies": {
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.12",
    "bun-types": "^1.3.0",
    "commitizen": "^4.3.1",
    "commitlint": "^20.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-customizable": "^7.5.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz.config.cjs"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.0"
  }
}

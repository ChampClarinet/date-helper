{
  "name": "@cantabile/date-helper",
  "version": "1.4.2",
  "description": "Helper class for date handling",
  "homepage": "https://github.com/ChampClarinet/date-helper",
  "author": "Wallop Opasakhun (https://github.com/champclarinet)",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "packageManager": "bun@1.3.0",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && tsc -p tsconfig.build.json",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "commit": "cz",
    "format": "prettier -w ."
  },
  "license": "ISC",
  "dependencies": {
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "bun-types": "^1.3.0",
    "commitizen": "^4.3.1",
    "commitlint": "^20.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-customizable": "^7.5.1",
    "eslint": "^9.25.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.31.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz.config.cjs"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.0"
  }
}
